# this script puts the coordinates of your finger on your android screen into the clipboard, and a file
set -x
adb shell dumpsys input | grep MotionEvent | tail -n1 | cut -d"[" -f2 | cut -d"(" -f2 | cut -d")" -f1 | sed 's/\.0//g' | tr -d ',' | tee /tmp/gettouchcoords
cat /tmp/gettouchcoords | xclip -i -selection clipboard
